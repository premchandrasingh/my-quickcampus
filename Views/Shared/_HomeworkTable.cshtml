@using My.QuickCampus.QuickCampus;
@model My.QuickCampus.QuickCampus.QuickCampusApiResponse

<table class="tftable" border="1">
    <tr>
        <th>Sl.</th>
        <th>Date</th>
        <th>Subject</th>
        <th>Type</th>
        <th>Title</th>
        <th></th>
        <th>Images</th>
        <th>Docs</th>
    </tr>

    @for (int i = 0, sl = Model.Data.Count(); i < Model.Data.Count(); i++, sl--)
    {
        <tr class="@(i % 2 == 0 ? "highlight" : "")">
            <td>@sl</td>
            <td width="100">@Model.Data[i].PostedDate.ToString("yyyy-MM-dd")</td>
            <td>@Model.Data[i].SubjectName</td>
            <td>@Model.Data[i].Type</td>
            <td>@Model.Data[i].Title</td>
            <td class="desc">@Model.Data[i].Body</td>
            <td>
                @if (Model.Data[i].Images != null && Model.Data[i].Images.Any())
                {
                    <ol>
                        @for (var j = 0; j < Model.Data[i].Images.Count(); j++)
                        {
                            <li>
                                @{
                                    var imageFileName = @Model.Data[i].GetDownloadInfo(sl, Model.Data[i].Images[j], j + 1);
                                }
                                <a asp-controller="Home" asp-action="ViewFile" asp-route-taskType="@Model.Data[i].Type" asp-route-fileType="img"
                                    asp-route-filename="@imageFileName" target="_blank" title="@imageFileName"><i
                                        class="bi bi-image"></i> View Image</a>
                            </li>

                        }
                    </ol>
                }
            </td>
            <td>
                @if (Model.Data[i].Documents != null && Model.Data[i].Documents.Any())
                {
                    <ol>
                        @for (var j = 0; j < Model.Data[i].Documents.Count(); j++)
                        {
                            <li>
                                @{
                                    var docFileName = @Model.Data[i].GetDownloadInfo(sl, Model.Data[i].Documents[j], j + 1);
                                }
                                <a asp-controller="Home" asp-action="ViewFile" asp-route-taskType="@Model.Data[i].Type" asp-route-fileType="pdf"
                                    asp-route-filename="@docFileName" title="@docFileName" target="_blank"><i
                                        class="bi bi-image"></i> View Doc</a>
                            </li>
                        }
                    </ol>
                }
            </td>
        </tr>
    }
</table>